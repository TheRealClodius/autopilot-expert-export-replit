modules = ["python-3.11", "python3", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["coreutils", "docker", "libxcrypt", "libyaml", "redis"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FastAPI Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MCP Atlassian Server"

[[workflows.workflow]]
name = "FastAPI Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "MCP Atlassian Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_mcp_server.py"
waitForPort = 8001

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 6379
externalPort = 80

[[ports]]
localPort = 8001
externalPort = 3000

[deployment]
deploymentTarget = "cloudrun"
run = ["sh", "-c", "python start_deployment.py"]
